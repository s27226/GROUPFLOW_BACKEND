# ============================================
# Environment Configuration
# Copy this file to .env and fill in your values
# ============================================

# =============================================
# DATABASE CONFIGURATION
# =============================================

# PostgreSQL connection string (REQUIRED)
# Format: Host=<host>;Port=<port>;Database=<db>;Username=<user>;Password=<password>;
# Connection pooling is configured in the connection string:
#   - Pooling=true (enabled by default)
#   - Minimum Pool Size=1
#   - Maximum Pool Size=100
POSTGRES_CONN_STRING=Host=localhost;Port=5432;Database=mydb;Username=postgres;Password=yourpassword;Pooling=true;Minimum Pool Size=1;Maximum Pool Size=20

# Database retry settings (optional - defaults shown)
DB_MAX_RETRY_COUNT=5
DB_MAX_RETRY_DELAY_SECONDS=10
DB_COMMAND_TIMEOUT_SECONDS=30
DB_SENSITIVE_LOGGING=false  # Set to true for development debugging

# =============================================
# AUTHENTICATION
# =============================================

# JWT signing key (REQUIRED) - use a strong, random string (at least 32 characters)
JWT_SECRET=your-super-secret-jwt-signing-key-at-least-32-chars

# =============================================
# CORS CONFIGURATION
# =============================================

# Comma-separated list of allowed origins (REQUIRED for production)
# Example: https://myapp.com,https://www.myapp.com
CORS_ORIGINS=http://localhost:3000

# =============================================
# GRAPHQL CONFIGURATION
# =============================================

# Show detailed exception messages in GraphQL responses (default: true in dev, false in prod)
GRAPHQL_INCLUDE_EXCEPTION_DETAILS=false

# Disable GraphQL introspection (default: false in dev, true in prod)
GRAPHQL_DISABLE_INTROSPECTION=true

# =============================================
# BLOB STORAGE (Azure/AWS)
# =============================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=your-bucket-name

# Azure Blob Storage (alternative)
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# =============================================
# ENVIRONMENT
# =============================================

# Set to Development, Staging, or Production
# This is typically set by ASPNETCORE_ENVIRONMENT
# ASPNETCORE_ENVIRONMENT=Development
